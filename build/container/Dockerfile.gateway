# build gateway plugins
ARG BUILDER_IMAGE=golang:1.22
ARG RUNTIME_IMAGE=gcr.io/distroless/base-debian12:nonroot
FROM ${BUILDER_IMAGE} AS builder

ARG TARGETOS
ARG TARGETARCH

WORKDIR /workspace

ENV CGO_ENABLED=1 \
    GOMODCACHE=/go/pkg/mod \
    GOCACHE=/root/.cache/go-build

# OS deps (with apt cache mounts)
RUN --mount=type=cache,target=/var/cache/apt \
    --mount=type=cache,target=/var/lib/apt \
    apt-get update && apt-get install -y --no-install-recommends \
      ca-certificates \
      pkg-config \
      libkrb5-dev \
      libzmq3-dev \
      libsodium-dev \
      build-essential \
    && rm -rf /var/lib/apt/lists/*

# Go deps first (stable layer)
COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    go mod download

# Source (more frequently changed)
COPY cmd/ cmd/
COPY api/ api/
COPY pkg/ pkg/

# IMPORTANT: remove -a (full rebuild killer)
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    GOOS=${TARGETOS:-linux} GOARCH=${TARGETARCH} \
    go build -x -trimpath -tags=zmq \
      -ldflags="-s -w -linkmode=external -extldflags '-lzmq -lsodium -lpthread -lm -lstdc++'" \
      -o /workspace/gateway-plugins ./cmd/plugins

# Collect runtime shared libs
RUN set -eux; \
    mkdir -p /workspace/deps; \
    ldd /workspace/gateway-plugins \
      | tr -s '[:blank:]' '\n' \
      | grep '^/' \
      | sort -u \
      | xargs -r -I{} cp -v {} /workspace/deps/

# Use distroless as minimal base image to package the manager binary
# Refer to https://github.com/GoogleContainerTools/distroless for more details
FROM ${RUNTIME_IMAGE}
WORKDIR /
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /workspace/gateway-plugins .
COPY --from=builder /workspace/deps /gateway-plugins-lib
ENV LD_LIBRARY_PATH=/gateway-plugins-lib
USER 65532:65532

ENTRYPOINT ["/gateway-plugins"]
